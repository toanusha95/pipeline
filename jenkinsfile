pipeline{
    agent any
    stages{
        stage ('git') {
            steps{
                git 'https://github.com/jleetutorial/maven-project.git'
            }
        }
        stage ('build') {
            steps{
                sh 'mvn package'
            }
        }
        stage ('test'){
            steps{
                sh 'mvn test'
                
            }
             post {
                always {
                    junit 'webapp/target/surefire-reports/*.xml'
                }
            }
        }
        stage ('archive') {
            steps{
                archiveArtifacts artifacts: 'webapp/target/*.war', followSymlinks: false
            }
            
        }
    }
}

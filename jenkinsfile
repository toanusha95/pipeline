pipeline{
    agent any
    stages{
        stage ('git') {
            steps{
                git 'https://github.com/jitpack/maven-simple.git'
            }
        }
        stage ('build') {
            steps{
                sh 'mvn package'
            }
        }
        stage ('test'){
            steps{
                sh 'mvn test'
                
            }
             post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage ('archive') {
            steps{
                archiveArtifacts artifacts: 'target/my-app-1.0-SNAPSHOT.jar', followSymlinks: false
            }
            
        }
    }
}
